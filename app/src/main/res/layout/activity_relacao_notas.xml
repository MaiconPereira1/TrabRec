<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relação de Notas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aluno"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerAlunos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvTopicosEspeciais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tópicos Especiais"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingEnd="8dp"/>

        <TextView
            android:id="@+id/tvMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Média: 6.0"
            android:textSize="16sp"
            android:gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv1Bim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1º Bim: 6.0"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv2Bim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2º Bim: 6.0"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv3Bim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3º Bim: 6.0"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv4Bim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4º Bim: 6.0"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewNotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />
</LinearLayout>
